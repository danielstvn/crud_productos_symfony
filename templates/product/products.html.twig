{% extends "base.html.twig" %}

{% block body %}

    <div class="container mt-auto" >
      <h1>Lista de productos</h1>
    </div>

    <div class="container mt-5">

  
  
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Codigo</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Marca</th>
            <th scope="col">Categoria</th>
            <th scope="col">Precio</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>

            {% for product in productos %}
              <tr>
                <th scope="row">{{loop.index}}</th>
                <td>{{product.code}}</td>
                <td>{{product.name}}</td>
                <td>{{product.description}}</td>
                <td>{{product.brand}}</td>
                <td>{{product.category}}</td>
                <td>{{product.price}}</td>
                <td>
                    <a class="btn btn-warning mt-2" href="{{path('edit',{'id':product.id})}}">Editar</a>
                    <a class="btn btn-danger mt-2" href="{{path('delete',{'id':product.id})}}" onclick=" return confirm('Esta seguro de eliminar el Producto ?')">Eliminar</a>
                    
                </td>
                
     
              </tr>

              {% endfor %}
              

           
          
          
        </tbody>
      </table>

      <div class="navigation">
        {{ knp_pagination_render(productos) }}
    </div>
    </div>

    <div class="container">

      <h3>Generar Reporte Pdf</h3>
      <a href="{{path('generatepdf')}}" class="btn btn-success" target="_blank"> Generar reporte</a>

    </div>

    

{% endblock %}